<h1>Displaying books with the tag: <%= @tag.tag %></h1>

<hr />
<div id="index-table">
  <table>
    <tr>
      <th>Title<br><a href="/tags/display/<%= @tag.id %>/title/Z-A"><i class="arrow up"></i></a>  <a href="/tags/display/<%= @tag.id %>/title/A-Z"><i class="arrow down"></i></a></th>
      <th>Author<br><a href="/tags/display/<%= @tag.id %>/author/Z-A"><i class="arrow up"></i></a>  <a href="/tags/display/<%= @tag.id %>/author/A-Z"><i class="arrow down"></i></a></th>
      <th>Genre<br><a href="/tags/display/<%= @tag.id %>/genre/Z-A"><i class="arrow up"></i></a>  <a href="/tags/display/<%= @tag.id %>/genre/A-Z"><i class="arrow down"></i></a></th>
      <th>Description</th>
      <th>Stock remaining<br><a href="/tags/display/<%= @tag.id %>/stock/A-Z"><i class="arrow up"></i></a>  <a href="/tags/display/<%= @tag.id %>/stock/Z-A"><i class="arrow down"></i></a></th>
    </tr>

    <% for book in @books %>
      <tr>
        <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
        <td><%= book.find_author_name %></td>
        <td><%= book.genre %></td>
        <td><%= book.description %></td>
        <% if book.stock == 0 %>
          <td id = "no-stock"><%= book.stock %></td>
        <% elsif book.stock <= 3 %>
          <td id = "low-stock"><%= book.stock %></td>
        <% else %>
          <td><%= book.stock %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
