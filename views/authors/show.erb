<h2><%= @author.name %></h2>
<p>Books by <%= @author.name %>:</p>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Description</th>
    <th>Stock remaining</th>
  </tr>

  <% for book in @books %>
    <tr>
      <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
      <td><%= book.find_author_name %></td>
      <td><%= book.genre %></td>
      <td><%= book.description %></td>
      <% if book.stock == 0 %>
        <td id = "no-stock"><%= book.stock %></td>
      <% elsif book.stock <= 3 %>
        <td id = "low-stock"><%= book.stock %></td>
      <% else %>
        <td><%= book.stock %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<h3><a href="/authors/<%= @author.id%>/edit">Edit author details</a></h3>
<h3><a href="/authors/<%= @author.id%>/delete">Remove author details from database</a></h3>
