<p>Title: <%= @book.title %></p>
<p>Author: <a href="/authors/<%= @book.author_id %>"><%= @book.find_author_name %></a></p>
<p>Genre: <%= @book.genre %></p>
<p>Description: <%= @book.description %></p>
  <% if @book.stock == 0 %>
    <p id = "no-stock-show">Stock left: <%= @book.stock %></p>
  <% elsif @book.stock <= 3 %>
    <p id = "low-stock-show">Stock left: <%= @book.stock %></p>
  <% else %>
    <p>Stock left: <%= @book.stock %></p>
  <% end %>
<p>Purchase cost: £<%= @book.buying_cost.to_s.insert(-3, ".") %></p>
<p>Selling price: £<%= @book.selling_price.to_s.insert(-3, ".") %></p>
<h3><a href="/tags/<%= @book.id%>/add">Add tags</a></h3>
<h3><a href="/books/<%= @book.id%>/edit">Edit book details</a></h3>
<h3><a href="/books/<%= @book.id%>/delete">Delete book details</a></h3>
<hr />
