<form action="/books/<%= @book.id %>" method="post">

  <div id="drop-down">
    <label for="author_id">Author:</label>
    <select name="author_id" id="author-id">
      <% for author in @authors %>
        <option <%= "selected" if @book.author_id == author.id %> value="<%= author.id %>"><%= author.name %></option>
      <% end %>
    </select>

    <label for="genre">Genre:</label>
    <select name="genre" id="genre">
      <% for genre in @genres %>
        <option <%= "selected" if @book.genre == genre %> value="<%= genre %>"><%= genre %></option>
      <% end %>
    </select>
  </div>

  <hr/>
  <label for="title">Title:</label>
  <input required="required" type="text" id="title" name="title" value="<%= @book.title %>">

  <br>
  <label for="description">Description:</label>
  <input required="required" type="text" id="description" name="description" value="<%= @book.description %>">

  <br>
  <table id="number-inputs">
    <tr>
      <th> <label for="stock">Stock count:</label></th>
      <th><label for="buying_cost">Purchase cost in pence:</label></th>
      <th><label for="selling_price">Selling price in pence:</label></th>
    </tr>
    <tr>
      <td><input required="required" type="number" id="stock" name="stock" value="<%= @book.stock %>"></td>
      <td><input required="required" type="number" id="buying_cost" name="buying_cost" value="<%= @book.buying_cost %>"></td>
      <td><input required="required" type="number" id="selling_price" name="selling_price" value="<%= @book.selling_price %>"></td>
    </tr>
  </table>

  <br>
  <label for="picture_link">Picture URL link:</label>
  <input type="text" id="picture_link" name="picture_link" value="<%= @book.picture_link %>">

  <br>
  <input type="submit" value="Edit book details">
</form>
