<form action="/books" method="post">

  <label for="title">Title:</label>
  <input required type="text" id="title" name="title" placeholder="Enter the title of the book">

  <label for="author">Author:</label>
  <input list="authors" placeholder="Please select an author">
  <datalist name="author" id = "authors">
    <% for author in @authors %>
      <option value="<%= author.name %>"><%= author.id %></option>
    <% end %>
  </datalist>

  <label for="genre">Genre:</label>
  <input list="genres" placeholder="Please select a genre">
  <datalist name="genre" id = "genres">
    <% for genre in @genres %>
      <option value="<%= genre %>"></option>
    <% end %>
  </datalist>

  <label for="description">Description:</label>
  <input required type="text" id = "description" name="description" placeholder="Enter a description of the book">

  <label for="stock">Stock count:</label>
  <input required type="number" id = "stock" name="stock" placeholder="How many are in stock?">

  <label for="buying_cost">Purchase cost:</label>
  <input required type="text" id = "buying_cost" name="buying_cost" placeholder="How much was the book bought for?">

  <label for="selling_price">Selling price:</label>
  <input required type="text" id = "selling_price" name="selling_price" placeholder="How much is the book being sold for?">

  <label for="picture_link">Picture link:</label>
  <input type="text" id = "picture_link" name="picture_link" placeholder="">



  <input type="submit" value="Submit book details">
</form>
